@model Health_Insurance.Models.Employee
@* Ensure the model namespace is correct based on your project name *@

@{
    ViewData["Title"] = "Create Employee";
}

<h1>Create Employee</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @* Form for creating a new employee. Posts data to the Create action of the Employee controller. *@
        @* asp-action="Create" targets the Create action *@
        @* asp-controller="Employee" explicitly targets the Employee controller (optional if within Employee controller, but good practice) *@
        <form asp-action="Create" asp-controller="Employee" method="post">
            @* This adds a hidden field for security (CSRF prevention) *@
            @Html.AntiForgeryToken() @* Ensure this is present for [ValidateAntiForgeryToken] *@

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Input fields for other properties *@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                @* Displays validation errors for the Name field *@
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Designation" class="control-label"></label>
                <input asp-for="Designation" class="form-control" />
                <span asp-validation-for="Designation" class="text-danger"></span>
            </div>

            @* Dropdown for selecting Organization *@
            <div class="form-group">
                <label asp-for="OrganizationId" class="control-label"></label>
                @* The asp-items tag helper populates the dropdown using the SelectList from ViewBag *@
                @* ViewBag.OrganizationId accesses ViewData["OrganizationId"] *@
                <select asp-for="OrganizationId" class="form-control" asp-items="ViewBag.OrganizationId">
                    <option value="">-- Select Organization --</option> @* Optional: Add a default empty option *@
                </select>
                <span asp-validation-for="OrganizationId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @* Link back to the Employee Index page *@
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

