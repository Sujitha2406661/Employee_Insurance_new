@model List<Health_Insurance.Models.Policy>
@* Ensure the model namespace is correct *@

@{
    ViewData["Title"] = "Policy Report";
}

<h1 class="mb-4">Policy Report</h1>

<p class="lead">Detailed list of all insurance policies.</p>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().PolicyId)</th>
                <th>@Html.DisplayNameFor(model => model.First().PolicyName)</th>
                <th>@Html.DisplayNameFor(model => model.First().CoverageAmount)</th>
                <th>@Html.DisplayNameFor(model => model.First().PremiumAmount)</th>
                <th>@Html.DisplayNameFor(model => model.First().PolicyType)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.PolicyId)</td>
                    <td>@Html.DisplayFor(modelItem => item.PolicyName)</td>
                    <td>@Html.DisplayFor(modelItem => item.CoverageAmount)</td>
                    <td>@Html.DisplayFor(modelItem => item.PremiumAmount)</td>
                    <td>@Html.DisplayFor(modelItem => item.PolicyType)</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-4">
        <a asp-action="ExportReport" asp-route-reportType="Policy" asp-route-format="CSV" class="btn btn-secondary">Export to CSV</a>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        No policy data available to display.
    </div>
}

<div class="mt-3">
    <a asp-action="Index">Back to Reports Dashboard</a>
</div>
