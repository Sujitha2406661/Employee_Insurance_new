@model List<Health_Insurance.Models.Employee>
@* Ensure the model namespace is correct *@

@{
    ViewData["Title"] = "Employee Report";
}

<h1 class="mb-4">Employee Report</h1>

<p class="lead">Detailed list of all employees.</p>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().EmployeeId)</th>
                <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                <th>@Html.DisplayNameFor(model => model.First().Phone)</th>
                <th>@Html.DisplayNameFor(model => model.First().Address)</th>
                <th>@Html.DisplayNameFor(model => model.First().Designation)</th>
                <th>Organization Name</th> @* Custom header for navigation property *@
                <th>@Html.DisplayNameFor(model => model.First().Username)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.EmployeeId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.Designation)</td>
                    <td>@Html.DisplayFor(modelItem => item.Organization.OrganizationName)</td> @* Access navigation property *@
                    <td>@Html.DisplayFor(modelItem => item.Username)</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-4">
        <a asp-action="ExportReport" asp-route-reportType="Employee" asp-route-format="CSV" class="btn btn-secondary">Export to CSV</a>
        @*
            // Placeholder for future Excel/PDF buttons
            <a asp-action="ExportReport" asp-route-reportType="Employee" asp-route-format="Excel" class="btn btn-secondary disabled">Export to Excel (Coming Soon)</a>
            <a asp-action="ExportReport" asp-route-reportType="Employee" asp-route-format="PDF" class="btn btn-secondary disabled">Export to PDF (Coming Soon)</a>
        *@
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        No employee data available to display.
    </div>
}

<div class="mt-3">
    <a asp-action="Index">Back to Reports Dashboard</a>
</div>
