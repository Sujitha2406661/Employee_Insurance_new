<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Health_Insurance</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Health_Insurance.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            /* Optional: Add a subtle background color or gradient to the body */
            /* background-color: #f8f9fa; */
            /* CSS for sticky footer */
            /* display: flex; */
            /* flex-direction: column; */
            /* min-height: 100vh; /* Ensure body takes at least the full viewport height */ */
        }
        /* Optional: Add some padding to the main content area */
        main {
            padding-top: 20px;
            padding-bottom: 20px;
            flex-grow: 1; /* Allow main content to grow and push footer down */
        }

        /* Ensure footer does not shrink */
        footer {
            flex-shrink: 0;
        }
    </style>
</head>
<body>
    @* This is the HTML for the Navbar. You should place this in your Views/Shared/_Layout.cshtml file. *@
    @* Ensure you have Bootstrap 5 CSS and JS included in your _Layout.cshtml *@

    @* This is the HTML for the Navbar. You should place this in your Views/Shared/_Layout.cshtml file. *@
    @* Ensure you have Bootstrap 5 CSS and JS included in your _Layout.cshtml *@

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-info navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @* Application Brand/Name *@
                @* Use asp-area, asp-controller, asp-action to link to your Home page or other main page *@
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Health Insurance System</a>
                @* Toggle button for collapsing the navbar on smaller screens *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @* Navbar links container - collapses on smaller screens *@
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @* ... other nav items ... *@
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Login</a> @* Adjust text-light if needed based on your navbar color *@
                        </li>
                        @* Link to Employee Page *@
                        <li class="nav-item">
                            @* Use asp-controller and asp-action for MVC routing *@
                            <a class="nav-link text-light" asp-area="" asp-controller="Employee" asp-action="Index">Employees</a>
                        </li>
                        @* Link to Enrollment Page *@
                        <li class="nav-item">
                            @* Use asp-controller and asp-action for MVC routing *@
                            <a class="nav-link text-light" asp-area="" asp-controller="Enrollment" asp-action="Index">Enrollments</a>
                        </li>
                        @* Link to Claims Page (Optional, based on your module) *@
                        <li class="nav-item">
                             <a class="nav-link text-light" asp-area="" asp-controller="Claim" asp-action="ListAllClaims">Claims</a>
                        </li>
                        @* Link to Premium Calculator Page (Optional, based on your module) *@
                        <li class="nav-item"> 
                             <a class="nav-link text-light" asp-area="" asp-controller="PremiumCalculator" asp-action="CalculatePremium">Premium Calculator</a>
                        </li>
                        @* Add other navigation links here *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark text-light py-2">
        <div class="container">
            &copy; 2025 - Health_Insurance - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>




